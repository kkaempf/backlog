<h1>New backlog entry</h1>

<%= form_for Item.new do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
  </p>
  <!-- START_HIGHLIGHT -->
  <p>
    <%= f.label :persona %><br />
    <%= f.text_field :persona %>
  </p>
  <!-- END_HIGHLIGHT -->

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

