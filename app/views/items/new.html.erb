<h1>New backlog entry</h1>

<%= form_for(:item, :url => items_url) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6 %>
  </p>
  <!-- START_HIGHLIGHT -->
  <% @template.each do |t| %>
  <%   t.each do |k,v| %>
  <p>
    <%= f.label k.to_sym %><br />
    <% case v
       when /(\d+x\d+)/ %>
       <%= f.text_area k.to_sym, :size => "#{v}" %>
    <% when /\d+/, Fixnum %>
       <%= f.text_field k.to_sym, :size => "#{v}" %>
    <% else %>
       <%= f.text_field k.to_sym %>
    <% end %>
  </p>
  <%   end %>
  <% end %>
  <!-- END_HIGHLIGHT -->

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

